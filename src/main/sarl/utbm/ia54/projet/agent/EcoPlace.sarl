package utbm.ia54.projet.^agent

import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Initialize
import io.sarl.core.Lifecycle
import io.sarl.util.Scopes
import java.util.UUID
import utbm.ia54.projet.message.UUIDMessage

/**
 * @author Lucas
 *
 */
agent EcoPlace extends EcoAgent {
	uses DefaultContextInteractions, Lifecycle
	
	on Initialize {
		// Initialize parameters
		num = occurrence.parameters.get(0) as Integer
		idLinked = occurrence.parameters.get(1) as UUID
		
		// Emit message to linked tile
		emit(
			new UUIDMessage(ID), Scopes.addresses(defaultSpace.getAddress(idLinked))
		)
		
		// Debug
		println("Place"+num+" | Id:"+ID+" | Linked:"+idLinked)
			
		// 
		killMe
	}
}